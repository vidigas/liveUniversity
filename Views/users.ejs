<!DOCTYPE html>
<html>
  <head>
      <title> live university </title>
      
      <meta name = "viewport" content = "width = device-width, initial-scale = 1">      
      
      <link rel = "stylesheet" href = "https://fonts.googleapis.com/icon?family=Material+Icons">
      <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
      <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,600,600i,700,700i" rel="stylesheet">
      <link rel="stylesheet" href="styles.css" type="text/css">

      <script type = "text/javascript" src = "https://code.jquery.com/jquery-2.1.1.min.js"> </script>           
      <script src = "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"> </script>

  </head>
  <body>
    <div class="app">
      <div class="menu "> 
        <div class="degrade">
          <div class="logo-wrapper"> 
            <img src="logo.png" class="app-logo" alt="live university" >
          </div>
        </div>
          <div class="menu-buttons-wrapper">
            <a class="menu-button" id="menu-button" href="/"> <i class="custom-icon material-icons small  menu-icon">insert_chart</i> Colaboradores</a>
            <a class="menu-button course" id="menu-button courses" href="/cursos" onclick="checkboxClick()"> <i class="custom-icon material-icons small menu-icon icon-course">insert_chart</i> Cursos</a>

          </div>
      </div>

      <div class="app-container "> 
        <div class="nav">
          <div class="profile-wrapper">
            <div class="profile-item">
              <div class="profile-name">Ricardo Barata</div>
              <div class="profile-title">Live University</div>
            </div>
            <div class="profile-item">
              <div class="profile-pic"> </div>
            </div>
            <div class="profile-item">
              <div class="profile-menu"> <i class="custom-icon material-icons small"> keyboard_arrow_down</i> </div>
            </div>              
          </div>
        </div>
        <div class="custom-card">
          <div class="card-title-wrapper">
            <div class="card-title">14 Práticas de Negociação</div> 
            <div class="card-date">1 de  Agosto de 2018</div>
          </div>
          <div class="card-buttons">
            <a class="custom-button" id="checklist" onclick="checkboxClick()"> <i class="custom-icon material-icons md-18 left">insert_chart</i> CHECKBOX</a>
            <a class="custom-button download-btn"> <i class="custom-icon material-icons md-18 left">insert_chart</i> BAIXAR CONTEÚDO</a>
          </div>
          <div id="card-checkbox" class="card-checkbox">
            <% for(var i = 1; i < 6; i++) { %>   
              <div class="card-instruction-row">
                <div class="checkbox-wrapper">
                  <form action="#">
                      <p>
                        <input type="checkbox" class="checkbox filled-in" id={<%= i %>}  />
                        <label for={<%= i %>}> </label>
                      </p>
                  </form>
                </div>
                  <span class="instructions">Instrução <%= i %> </span> <br />
                  <span class="instructions info">Algumas observações sobre essa instrução</span>
              </div>
         <% } %>
            </div>
          <div class="card-table-controllers">
            <div class="table-title">Colaboradores</div>

            <a class="custom-button table-btn header-btn">  + ABRIR</a>
            <div class='search-bar-wrapper'>
              <input type="search" id="site-search" class="search-bar"  aria-label="Search through site content" placeholder="  Pesquisar">
              <i class="custom-icon material-icons search-icon"> search</i>
            </div>
          </div>
          <hr>
          <div class="table-wrapper">
            <table class="table">
              <%for(var i = 0; i < users.length; i++) { %>
                <tr>
                  <td>
                    <span class="table-name"><%= users[i].name %></span><br/>
                    <span class="table-cell-subtitle"><%= users[i].email %></span>
                  </td>
                  <td>
                    <span class="table-cell-key">Cargo:</span><br/>
                    <span class="table-cell-value"><%= users[i].position %> </span>
                  </td>
                  <td>
                    <span class="table-cell-key">Empresa:</span><br/>
                    <span class="table-cell-value"><%= users[i].company %></span>
                  </td>
                  <td>
                    <div class="table-buttons">
                      <a class="custom-button table-btn blue-btn" id="open-btn"> ABRIR </a>
                      <a class="custom-button table-btn"> REMOVER</a>
                    </div>
                  </td>
                </tr>
              <%}%>
            </table>
          </div>
          
        </div>


      </div>

    </div>

<script type="text/javascript">

  function checkboxClick () {
    // document.querySelector('#checklist').addEventListener('click', (e) => {
      let button = document.querySelector('#card-checkbox')
      let card = document.querySelector('.custom-card')
        if(button.className.split(' ')[1]){
          button.className = 'card-checkbox';
          card.className = "custom-card";
        } else {
          button.className = 'card-checkbox open';
          card.className = 'custom-card card-open';
        }
          
        return
    // });
  }
 



</script>
  </body>
</html>
